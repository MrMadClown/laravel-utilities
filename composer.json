{
  "name": "mrmadclown/laravel-utilities",
  "type": "library",
  "license": "MIT",
  "description": "",
  "require": {
    "php": "^8.0",
    "illuminate/database": "^10.0",
    "illuminate/support": "^10.0",
    "illuminate/console": "^10.0",
    "psr/log": "^3.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "10.0.16"
  },
  "extra": {
    "laravel": {
      "providers": [
        "MrMadClown\\LaravelUtilities\\ServiceProvider"
      ]
    }
  },
  "authors": [],
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "MrMadClown\\LaravelUtilities\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ],
    "exclude-from-classmap": [
      "/tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "MrMadClown\\LaravelUtilities\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": [
      "phpunit --configuration phpunit.xml"
    ],
    "local-tests": [
      "docker-compose up -d ",
      "docker-compose exec -T app vendor/bin/phpunit --configuration phpunit.xml --debug --verbose",
      "docker-compose down"
    ]
  }
}
